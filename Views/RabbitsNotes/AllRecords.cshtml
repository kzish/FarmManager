@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<style>
    @*style the drop down select entries - datatables*@
    .custom-select
    {
        height:30px!important;
        width:50px!important;
        margin-left:5px!important;
    }
    @*style the copy buttons- datatables*@
    .dt-buttons
    {
        margin-left:4px!important;
    }
</style>



<div class="container">
    <row>
        <div class="col-md-12">
            <a href="~/RabbitsNotes/CreateRecord" class="btn btn-primary btn-sm">Create Record</a>
        </div>
        <br />
    </row>
    <div class="row">
        <div class="col-md-12" id="clients">
           <center id="loader">
               <img src="~/assets/img/_loading.gif" height="100" width="100"/>
           </center>
        </div>
    </div>
</div>

<script>

    $.ajax({
        url: "@Url.Content("~/RabbitsNotes/ajaxAllRecords")",
        success: function (data) {
            $("#loader").hide();
            $("#clients").html(data);
        },
        error: function () {
            alert("Server Error");
            $("#loader").hide();
        },
    });
 
</script>